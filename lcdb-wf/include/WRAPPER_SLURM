#!/bin/bash
#SBATCH --job-name="lcdb-wf"
#SBATCH --partition="niddk,norm"

SNAKEFILE=$1
EXTRA=$2

# Make required folders
if [[ ! -e logs ]]; then mkdir -p logs; fi

# run pipeline
(source activate larval_gonad; \
    time snakemake \
    -p \
    -s $SNAKEFILE \
    --directory $PWD \
    -T \
    -k \
    --rerun-incomplete \
    --jobname "s.{rulename}.{jobid}.sh" \
    -j 999 \
    --cluster-config config/clusterconfig.yaml \
    --verbose \
    --cluster 'sbatch {cluster.prefix} --cpus-per-task={threads}  --output=logs/${{SNAKEFILE}}_{rule}.o.%j --error=logs/${{SNAKEFILE}}_{rule}.e.%j' \
    --use-conda \
    --configfile config/config.yml \
    --latency-wait=60 \
    $EXTRA \
    ) > "${SNAKEFILE}.log" 2>&1

SNAKE_PID=$!

finish(){
    echo 'Stopping running snakemake job.'
    kill -SIGINT $SNAKE_PID
    exit 0
}
trap finish SIGTERM

wait $SNAKE_PID

rule deg_to_tsv:
    """ This rule builds germline DEG comparisons.
        Files that it is used to create:
            '../output/science_submission/adult_bulk_RNA-Seq_gene_level_counts.tsv.gz',
            '../output/science_submission/larval_bulk_RNA-Seq_gene_level_counts.tsv.gz',
            '../output/science_submission/larval_bulk_RNA-Seq_intergenic_counts.tsv.gz',
    """
    input: "../output/seurat3-cluster-wf/germline_deg/{comparison}.feather"
    output: "../output/science_submission/{comparison}.tsv"
    run:
        (
            pd.read_feather(input[0])
            .merge(FBGN2CHROM, on=["FBgn", "gene_symbol"], how="left")
            .set_index(["FBgn", "gene_symbol", "Chromosome"])
            .to_csv(output[0], sep="\t")
        )


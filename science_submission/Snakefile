            pd.read_feather(input[0])
            .merge(FBGN2CHROM, on=["FBgn", "gene_symbol"], how="left")
            .set_index(["FBgn", "gene_symbol", "Chromosome"])
            .to_csv(output[0], sep="\t")
        )


